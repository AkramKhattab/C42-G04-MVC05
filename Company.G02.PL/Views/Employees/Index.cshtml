@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Employees";
    string s01 = ViewData["Data01"] as string;
    string s02 = ViewBag.Data02;
}

<div class="container mt-4">
    <h1 class="mb-4">All Employees</h1>

    <form asp-action="Index" class="mb-4">
        <div class="input-group">
            <input type="text" id="employeeSearch" name="InputSearch" class="form-control" placeholder="Search employees...">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if(!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-warning text-center">
            <p class="mb-0">@TempData["Message"]</p>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Create Employee
        </a>
        <span class="text-muted">Total Employees: @Model.Count()</span>
    </div>

    @if(Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(d => d.Name)</th>
                        <th>@Html.DisplayNameFor(d => d.Age)</th>
                        <th>@Html.DisplayNameFor(d => d.WorkFor)</th>
                        <th>@Html.DisplayNameFor(d => d.Address)</th>
                        <th>@Html.DisplayNameFor(d => d.Email)</th>
                        <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(d => d.Salary)</th>
                        <th>@Html.DisplayNameFor(d => d.IsActive)</th>
                        <th>@Html.DisplayNameFor(d => d.HiringDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var employee in Model)
                    {
                        <tr>
                            <td>@employee.Name</td>
                            <td>@employee.Age</td>
                            <td>@employee.WorkFor?.Name</td>
                            <td>@employee.Address</td>
                            <td>@Html.DisplayFor(m => employee.Email)</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@Html.DisplayFor(m => employee.Salary)</td>
                            <td>
                                <span class="badge bg-@(employee.IsActive ? "success" : "danger")">
                                    @(employee.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@employee.HiringDate.ToShortDateString()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>     
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No Employees Found</h4>
            <p class="mb-0">There are currently no employees in the system.</p>
        </div>
    }
</div>